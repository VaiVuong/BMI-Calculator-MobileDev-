<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMICalculator.BMIResultsPage">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label x:Name="BMIResultLabel" FontSize="30" HorizontalOptions="Center"/>
        <Label x:Name="BMIStatusLabel" FontSize="24" HorizontalOptions="Center"/>

        <Button Text="Health Recommendations"
                Clicked="OnToHealthPageClicked"
                BackgroundColor="CornflowerBlue"
                TextColor="White" />

        <Button Text="Back to Input"
                Clicked="OnBackToInputClicked"/>
    </VerticalStackLayout>
</ContentPage>
